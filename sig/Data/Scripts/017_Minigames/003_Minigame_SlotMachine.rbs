#
# ==============================================================================
class SlotMachineScore < BitmapSprite
  attr_reader score: untyped

  def initialize: (untyped x, untyped y, ?::Integer score) -> void

  def score=: (untyped value) -> untyped

  def refresh: () -> untyped
end

