class SlotMachineReel < BitmapSprite
  SCROLL_SPEED: 640

  ICONS_SETS: ::Array[::Array[3 | 2 | 7 | 6 | 1 | 5 | 0 | 4] | ::Array[0 | 4 | 1 | 2 | 7 | 6 | 5 | 3] | ::Array[6 | 2 | 1 | 4 | 3 | 7 | 5]]

  SLIPPING: ::Array[0 | 1 | 2 | 3]

  def initialize: (untyped x, untyped y, untyped reel_num, ?::Integer difficulty) -> void

  def startSpinning: () -> untyped

  def spinning?: () -> untyped

  def stopSpinning: (?bool noslipping) -> untyped

  def showing: () -> untyped

  def update: () -> untyped
end

